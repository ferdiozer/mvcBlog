<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - MVC Blog</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/css/blog-home.css" rel="stylesheet">

    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/Home/Index/">Mvc Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/">AnaSayfa <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Hakkimizda/">Hakkımızda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Iletisim/">İletişim</a>
                </li>
                @if (Session["uyeid"]!=null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Uye/Index/@Session["uyeid"]">@Session["kullaniciadi"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Uye/Logout/">Çıkış</a>
                    </li>
                    if (Convert.ToInt32(Session["yetkiid"]) == 1)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Index/" target="_blank">Admin Paneli</a>
                        </li>
                    }
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Uye/Login/">Giriş</a>
                    </li>
                }



            </ul>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="my-4">@ViewBag.Title <small>Herşey Çok .NET</small></h1>

                @*CONTENT*@
                @RenderBody()
            </div>
                

             
                
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Search Widget -->
                @Html.Partial("AraPartial")
                <!-- Categories Widget -->
                <div class="card my-4">
                    @*@{
                        Html.RenderPartial("KategoriPartial1");
                    }*@
                    @*@Html.Partial("KategoriPartial")*@

                    @*@RenderPage("~/~/Views/Home/KategoriPartial.cshtml")*@

                    @{
        Html.RenderAction("KategoriPartial", "Home");
    }
                    </div>
                    <!-- Populer Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }

                </div>
                <!-- end comment Widget -->
                    <div class="card my-4">
                        @{ 
                            Html.RenderAction("SonYorumlar", "Home");
                        }
                       
                    </div>
                </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; DevIT @DateTime.Now.Year</p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/popper/popper.min.js"></script>
    <script src="~/Content/Kaynak/startbootstrap-blog-home-gh-pages/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/gridmvc.lang.tr.js")" type="text/javascript"> </script>

</body>
</html>

















