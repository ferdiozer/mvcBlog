@using PagedList;
@using PagedList.Mvc;
@model IPagedList<mvcBlog.Models.Makale>

@{
    ViewBag.Title = "Makale Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Makale Listesi</h2>

<p>
    @Html.ActionLink("Yeni Makale", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Başlık")
        </th>
        <th>
            @Html.Label("Fotoğraf")
        </th>
        <th>
           @Html.Label("Tarih")
        </th>
        <th>
            @Html.Label("Üye İD")
        </th>
        <th>
            @Html.Label("Okunma Sayısı")
        </th>
        <th>
            @Html.Label("Kategori Adı")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.baslik)
        </td>
        <td>
            <img src="@item.foto" width="75" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uye_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.okunma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.ad)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

<div class="container-fluid">
    <div class="text-center">
        <div class="pagedList pagination-lg">
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }), PagedListRenderOptions.Classic)
        </div>
    </div>
</div>
